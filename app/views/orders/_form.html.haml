= form_for @order do |f|
  -if @order.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :orderer_id
    = f.text_field :orderer_id
  .field
    = f.label :fulfiller_id
    = f.text_field :fulfiller_id
  .field
    = f.label :date
    = f.date_select :date
  .actions
    = f.submit 'Save'
