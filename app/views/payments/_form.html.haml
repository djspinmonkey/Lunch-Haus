= form_for @payment do |f|
  -if @payment.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@payment.errors.count, "error")} prohibited this payment from being saved:"
      %ul
        - @payment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :payer_id
    = f.select :payer_id, User.all.collect { |u| [u.name, u.id] }
  .field
    = f.label :recipient_id
    = f.select :recipient_id, User.all.collect { |u| [u.name, u.id] }
  .field
    = f.label :amount
    = f.text_field :amount
  .actions
    = f.submit 'Save'
