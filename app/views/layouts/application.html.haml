%head
  %title Lunch Haus
  = stylesheet_link_tag :all
  = javascript_include_tag :defaults
  = csrf_meta_tag

%body
  .top_bar
    .user
      - if user_signed_in?
        = current_user.name
        = link_to "log out", destroy_user_session_path
      - else
        = link_to "log in", new_user_session_path

  = yield

